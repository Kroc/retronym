{
    "[markdown]": {
        "editor.tabSize": 4,
        "editor.wordWrap": "bounded",
        "editor.quickSuggestions": false,
        "editor.wordWrapColumn": 80,
        "editor.rulers": [
            80
        ]
    },
    "markdownlint.config": {
        "MD012": false,
        "MD003": {
            "style": "setext_with_atx_closed"
        }
    }
}